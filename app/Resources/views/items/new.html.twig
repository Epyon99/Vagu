{% extends 'base.html.twig' %}

{% block body %}
    <h1>Item creation</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
		<div class="form-group">
			<label for="appbundle_items_idmarca"> Marca</label>
			<div>
				<select class="form-control" id="appbundle_items_idmarca" name="appbundle_items[idmarca]">
					{% for marca in marcas %}
						<option value="{{ marca.idmarca }}">{{ marca.nombre }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
		<div class="form-group">
        <input class="btn" type="submit" value="Create" />
		</div>
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('items_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
